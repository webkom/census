import redis
export {
    client: () ->
        host = process.env.REDIS_HOST or '127.0.0.1'
        port = process.env.REDIS_PORT or 6379
        password = process.env.REDIS_PASSWORD

        client = redis.createClient(port, host, {})

        # istanbul ignore if
        if password
            client.auth(password)
        return client
}
